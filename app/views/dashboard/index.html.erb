<h1 class="mb-4">Dashboard</h1>

<div class="row mb-4">
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Total de Notas Emitidas</h5>
        <p class="display-6 mb-0"><%= @total_notas %></p>
      </div>
    </div>
  </div>
</div>

<h4>Últimas Notas Fiscais</h4>

<% if @notas_emitidas.any? %>
  <table class="table table-striped table-hover mt-2">
    <thead>
      <tr>
        <th>Número</th>
        <th>Série</th>
        <th>Data</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @notas_emitidas.each do |nota| %>
        <tr>
          <td><%= nota.numero %></td>
          <td><%= nota.serie %></td>
          <td><%= nota.data_emissao&.strftime("%d/%m/%Y %H:%M") %></td>
          <td><%= nota.status_autorizacao.presence || "Pendente" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-muted mt-2">Nenhuma nota fiscal emitida ainda.</p>
<% end %>
