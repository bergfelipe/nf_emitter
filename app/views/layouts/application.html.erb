    <style>
      /* ðŸŽ¨ Estilo visual da sidebar */
      nav {
        background-color: #1c1f23;
      }

      .nav-link {
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
      }

      .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        transform: translateX(3px);
      }

      .nav-link i {
        transition: color 0.2s ease-in-out, transform 0.2s ease-in-out;
      }

      .nav-link:hover i {
        color: #ffc107;
        transform: scale(1.1);
      }

      .nav-link.disabled {
        cursor: not-allowed;
        opacity: 0.5;
      }

      h5 i {
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0% { color: #ffc107; }
        50% { color: #f8f9fa; }
        100% { color: #ffc107; }
      }

      /* ðŸŽ¨ CustomizaÃ§Ã£o geral */
      body {
        font-family: 'Inter', sans-serif;
      }

      main {
        background-color: #f8f9fa;
        min-height: 100vh;
      }

      .alert-warning strong {
        color: #856404;
      }
    </style>
  </head>

  <body class="bg-light">
    <% if user_signed_in? %>
      <div class="d-flex">
        <!-- ðŸ§­ Sidebar -->
        <nav class="bg-dark text-white p-3 d-flex flex-column" style="min-height: 100vh; width: 240px;">
          <h5 class="mb-4 text-center">
            <i class="fa-solid fa-file-invoice-dollar text-warning me-2"></i>
            NF Emissor
          </h5>
        
          <ul class="nav flex-column gap-2">
            <li class="nav-item">
              <%= link_to authenticated_root_path, class: "nav-link text-white d-flex align-items-center" do %>
                <i class="fa-solid fa-chart-line me-2"></i> Dashboard
              <% end %>
            </li>
        
            <li class="nav-item">
              <% if current_user.certificate_installed? %>
                <%= link_to new_nota_fiscal_path, class: "nav-link text-white d-flex align-items-center" do %>
                  <i class="fa-solid fa-file-circle-plus me-2"></i> Emitir Nota
                <% end %>
              <% else %>
                <a class="nav-link disabled text-secondary d-flex align-items-center">
                  <i class="fa-solid fa-file-circle-plus me-2"></i> Emitir Nota
                </a>
              <% end %>
            </li>
        
            <li class="nav-item">
              <% if current_user.certificate_installed? %>
                <%= link_to notas_fiscais_path, class: "nav-link text-white d-flex align-items-center" do %>
                  <i class="fa-solid fa-folder-open me-2"></i> Notas Emitidas
                <% end %>
              <% else %>
                <a class="nav-link disabled text-secondary d-flex align-items-center">
                  <i class="fa-solid fa-folder-open me-2"></i> Notas Emitidas
                </a>
              <% end %>
            </li>
        
            <li class="nav-item">
              <%= link_to new_certificate_path, class: "nav-link text-white d-flex align-items-center" do %>
                <i class="fa-solid fa-shield-halved me-2"></i> Certificado
              <% end %>
            </li>
        
            <li class="nav-item mt-4">
              <%= link_to destroy_user_session_path,
                          data: { turbo_method: :delete },
                          class: "nav-link text-danger d-flex align-items-center" do %>
                <i class="fa-solid fa-right-from-bracket me-2"></i> Sair
              <% end %>
            </li>
          </ul>
        </nav>
        

        <!-- ðŸ“Š ConteÃºdo principal -->
        <main class="flex-grow-1 p-4">
          <% if notice %>
            <div class="alert alert-success"><%= notice %></div>
          <% end %>
          <% if alert %>
            <div class="alert alert-danger"><%= alert %></div>
          <% end %>

          <% if user_signed_in? && !current_user.certificate_installed? %>
            <div class="alert alert-warning d-flex justify-content-between align-items-center">
              <div>
                <strong>Certificado obrigatÃ³rio!</strong>
                Configure o certificado digital para emitir e visualizar notas.
              </div>
              <%= link_to "Configurar", new_certificate_path, class: "btn btn-sm btn-primary" %>
            </div>
          <% end %>

          <%= yield %>
        </main>
      </div>
    <% else %>
      <div class="container mt-5">
        <%= yield %>
      </div>
    <% end %>
  </body>
</html>
